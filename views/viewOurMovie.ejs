<%- include('templates/header.ejs') %>

    <main class="grid-film">
        <section class="film-container">
            <div class="movie">
                <div class="div-card-img">
                    <img class="img-mini" src="<%= data.image %>" alt="portada de la película">
                </div>
                <div class="film-data">
                    <h1> Título: <%= data.title %>
                    </h1>
                    <p> Año: <%=data.year %>
                    </p>
                    <p> Director: <%= data.director %>
                    </p>
                   
                    <p> Género: <%= data.genero %>
                    </p>
                    <p> Duración: <%=data.duracion %>
                    </p>
                    <p> Sinopsis: <%= data.sinopsis %>
                    </p>
                    <p> Rating: <%= data.rating %>
                    </p>
                </div>
            </div>
            <div class="movie-buttons">
               
                <div class="false-button"><a href='/search/addApi/<%= data._id %>'>Añadir a favoritos</a></div>
            </div>
        </section>
    </main>
   
    <%- include('templates/footer.ejs') %>